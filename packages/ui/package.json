    "@seampass/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.2.4",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
