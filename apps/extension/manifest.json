{
  "manifest_version": 3,
  "name": "SeamPass Password Generator",
  "version": "1.0.0",
  "description": "Generate secure random and memorable passwords",
  "permissions": ["clipboardWrite", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["eff_large_wordlist.txt"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SeamPass Password Generator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
